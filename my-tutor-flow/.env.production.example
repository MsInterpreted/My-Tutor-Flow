# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION - TD LEARNING ACADEMY
# =============================================================================
# 
# IMPORTANT SECURITY NOTES:
# 1. Copy this file to .env.production and fill in actual values
# 2. NEVER commit .env.production to version control
# 3. Use strong, unique values for all secrets
# 4. Regularly rotate API keys and tokens
# 5. Enable Firebase App Check for additional security
#
# =============================================================================

# -----------------------------------------------------------------------------
# FIREBASE PRODUCTION CONFIGURATION
# -----------------------------------------------------------------------------
# Create a new Firebase project specifically for production
# Project ID should be: tdlearningacademy-prod (or similar)

VITE_FIREBASE_API_KEY=your_production_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=tdlearningacademy-prod.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tdlearningacademy-prod
VITE_FIREBASE_STORAGE_BUCKET=tdlearningacademy-prod.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_production_sender_id
VITE_FIREBASE_APP_ID=your_production_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_production_measurement_id

# Firebase App Check (Recommended for production security)
VITE_FIREBASE_APP_CHECK_SITE_KEY=your_recaptcha_site_key

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------

VITE_APP_NAME=TD Learning Academy
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Business Information
VITE_BUSINESS_NAME=TD Learning Academy
VITE_BUSINESS_EMAIL=admin@tdlearningacademy.com
VITE_BUSINESS_PHONE=+1-555-123-4567
VITE_BUSINESS_ADDRESS=Your Business Address
VITE_BUSINESS_WEBSITE=https://tdlearningacademy.com

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

# Data Source Configuration
VITE_FORCE_MOCK_DATA=false
VITE_ENABLE_OFFLINE_MODE=true

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CRASHLYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Features
VITE_ENABLE_APP_CHECK=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_REQUIRE_EMAIL_VERIFICATION=true

# UI Features
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_NOTIFICATIONS=true

# -----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# -----------------------------------------------------------------------------

# Email Service (for notifications and reports)
VITE_EMAIL_SERVICE_PROVIDER=firebase
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_if_used

# SMS/WhatsApp Integration (for parent notifications)
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_id
VITE_WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_id
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
VITE_WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Payment Processing (for future billing features)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
# Note: Secret key should be stored in Firebase Functions environment

# Google Services Integration
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# CORS Configuration
VITE_ALLOWED_ORIGINS=https://tdlearningacademy.com,https://www.tdlearningacademy.com

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=100
VITE_RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Session Configuration
VITE_SESSION_TIMEOUT_MINUTES=60
VITE_REMEMBER_ME_DAYS=30

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# -----------------------------------------------------------------------------

# CDN Configuration
VITE_CDN_URL=https://cdn.tdlearningacademy.com
VITE_ENABLE_CDN=true

# Caching
VITE_CACHE_DURATION_HOURS=24
VITE_ENABLE_SERVICE_WORKER=true

# Image Optimization
VITE_IMAGE_QUALITY=85
VITE_ENABLE_WEBP=true

# -----------------------------------------------------------------------------
# MONITORING AND LOGGING
# -----------------------------------------------------------------------------

# Error Reporting
VITE_SENTRY_DSN=your_sentry_dsn_if_used
VITE_LOG_LEVEL=warn

# Performance Monitoring
VITE_PERFORMANCE_SAMPLE_RATE=0.1
VITE_ENABLE_REAL_USER_MONITORING=true

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# -----------------------------------------------------------------------------
# BACKUP AND DISASTER RECOVERY
# -----------------------------------------------------------------------------

# Backup Configuration
VITE_BACKUP_FREQUENCY_HOURS=24
VITE_BACKUP_RETENTION_DAYS=30
VITE_ENABLE_AUTO_BACKUP=true

# Disaster Recovery
VITE_BACKUP_STORAGE_BUCKET=tdlearningacademy-backups
VITE_ENABLE_CROSS_REGION_BACKUP=true

# -----------------------------------------------------------------------------
# MULTI-TENANT PREPARATION (For Future SaaS Implementation)
# -----------------------------------------------------------------------------

# Tenant Configuration
VITE_ENABLE_MULTI_TENANCY=false
VITE_DEFAULT_TENANT_ID=tdlearningacademy
VITE_TENANT_ISOLATION_LEVEL=database

# Subscription Management
VITE_ENABLE_SUBSCRIPTIONS=false
VITE_TRIAL_PERIOD_DAYS=14
VITE_GRACE_PERIOD_DAYS=3

# -----------------------------------------------------------------------------
# DEVELOPMENT AND DEBUGGING
# -----------------------------------------------------------------------------

# Debug Configuration (should be false in production)
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_REDUX_DEVTOOLS=false

# Testing Configuration
VITE_ENABLE_E2E_TESTS=false
VITE_TEST_USER_EMAIL=test@tdlearningacademy.com

# -----------------------------------------------------------------------------
# LEGAL AND COMPLIANCE
# -----------------------------------------------------------------------------

# Privacy and Compliance
VITE_PRIVACY_POLICY_URL=https://tdlearningacademy.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://tdlearningacademy.com/terms
VITE_COOKIE_POLICY_URL=https://tdlearningacademy.com/cookies

# Data Retention
VITE_DATA_RETENTION_YEARS=7
VITE_ENABLE_GDPR_COMPLIANCE=true
VITE_ENABLE_COPPA_COMPLIANCE=true

# -----------------------------------------------------------------------------
# CONTACT AND SUPPORT
# -----------------------------------------------------------------------------

# Support Information
VITE_SUPPORT_EMAIL=support@tdlearningacademy.com
VITE_SUPPORT_PHONE=+1-555-123-4567
VITE_SUPPORT_HOURS=Monday-Friday 9AM-5PM EST

# Emergency Contacts
VITE_EMERGENCY_CONTACT_EMAIL=emergency@tdlearningacademy.com
VITE_TECHNICAL_CONTACT_EMAIL=tech@tdlearningacademy.com

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
